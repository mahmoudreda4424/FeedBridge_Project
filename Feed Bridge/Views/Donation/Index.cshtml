<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Google fonts icons -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <!-- Font awesome icons -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
          integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    <title>FeedBridge - تبرع</title>
    <link rel="stylesheet" href="main.css" />
</head>
<body>
    <!-- ✅ الفورم مع الصورة -->
    <div class="donate-container">
        <div class="donate-img">
            <img src="imgs/donation.png" alt="donate-img" />
        </div>
        <div class="donate-form">
            <form action="">
                <label for="donationFile" class="upload-img">
                    <span class="material-symbols-outlined" id="uploadIcon">
                        upload
                    </span>
                    <p>اضف صوره المنتج</p>
                    <input type="file"
                           name="donationFile"
                           id="donationFile"
                           accept="image/*" />
                </label>
                <input type="text"
                       name="donarName"
                       id="donationName"
                       placeholder="الاسم بالكامل ..."
                       required />
                <div class="group">
                    <input type="date"
                           name="expireDate"
                           id="expireDate"
                           placeholder="تاريخ انتهاء الصلاحيه ..."
                           required />
                    <input type="number"
                           name="donationQuantity"
                           id="donationQuantity"
                           min="1"
                           placeholder="الكمية ..."
                           required />
                </div>
                <div class="group">
                    <input type="text"
                           name="donationAddress"
                           id="donationAddress"
                           placeholder="العنوان ..."
                           required />
                    <input type="phone"
                           name="donationPhone"
                           id="donationPhone"
                           placeholder="رقم الهاتف ..."
                           required />
                </div>
                <input type="text"
                       name="donationDescription"
                       id="donationDescription"
                       class="donationDescription"
                       placeholder="وصف التبرع ..."
                       required />
                <button type="submit" class="btn">تبرع</button>
            </form>
        </div>
    </div>

    <!-- ✅ سكربت -->
    <script type="module" src="script.js"></script>
</body>
</html>
@section FooterSection {
    @await Html.PartialAsync("_Footer")
}
