@model IEnumerable<Feed_Bridge.Models.Entities.Donation>
@{
    ViewData["Title"] = "كل التبرعات";
    ViewData["ActivePage"] = "Donors";
    Layout = "~/Views/Shared/Dashboard.cshtml"; // ربط ال layout
}

 <div class="donors-page">
    <div class="special-heading">
        <h1>التبرعات</h1>
        <div class="Admin-donors-Content">
            <div class="donors_data_table">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>الاسم</th>
                            <th>تاريخ الانتهاء</th>
                            <th>الكمية</th>
                            <th>الوصف</th>
                            <th>الحذف أو التعديل</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var donation in Model)
                        {
                            <tr>
                                <td>@donation.User?.UserName</td>
                                <td>@donation.Name</td>
                                <td>@donation.ExpirDate.ToString("yyyy/MM/dd")</td>
                                <td>@donation.Quantity</td>
                                <td>@donation.Description</td>
                                <td>
                                    <form asp-action="Delete" asp-route-id="@donation.Id" method="post">
                                        <button type="submit" class="btn btn-danger">حذف</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 

