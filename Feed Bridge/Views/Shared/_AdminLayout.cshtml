@*
    Admin Layout
    - ثابت لكل صفحات الداشبورد
    - بيحتوي على الـ Sidebar + Header
    - محتوى الصفحة بيتعرض جوه @RenderBody()
*@
<!DOCTYPE html>
<html lang="en" dir="rtl">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Google fonts icons -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <title>@ViewData["Title"] - FeedBridge Admin</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <style>
        /* sidebar default color */
        .sidebar ul li a {
            color: black; /* اللون الافتراضي */
            text-decoration: none;
        }

            /* hover ما يغيرش اللون */
            .sidebar ul li a:hover {
                color: black;
            }

        /* العنصر الحالي (active) */
        .sidebar ul li.active a {
            color: #1cba7f;
        }

    </style>
</head>

<body>
    <!-- Dashboard Header -->
    <header>
        <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
            <div class="header-logo">
                <img src="~/imgs/logo.png" alt="logo" class="logo-img" />
                <p>FeedBridge</p>
            </div>
        </a>

      

        @await Component.InvokeAsync("Notifications")


        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            @* رابط البروفايل للـ Admin فقط *@
            @if (User.IsInRole("Admin"))
            {
                <a asp-controller="User" asp-action="Profile" asp-route-id="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value">
                    <span class="material-symbols-outlined" style="color:#1cba7f;">account_circle</span>
                </a>
            }

            <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                <button type="submit" class="btn btn-primary" style="background-color:#1cba7f;border:none;color:white;">
                    تسجيل خروج
                </button>
            </form>
        }

            else
            {
                <!-- المستخدم غير مسجل -->
                <a asp-controller="Account" asp-action="Login">تسجيل الدخول</a>
            }
        </div>
    </header>

    <div class="page">
        <!-- Sidebar -->
        <div class="sidebar">
            <ul>
                <li class="@(ViewData["ActivePage"] as string == "Dashboard" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Dashboard">
                        <span class="material-symbols-outlined"> settings </span>
                        <p>لوحة التحكم</p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "Orders" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Orders">
                        <span class="material-symbols-outlined"> add_circle </span>
                        <p>الطلبات</p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "Reports" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Reports">
                        <span class="material-symbols-outlined"> mail </span>
                        <p>التقارير</p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "Products" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Products">
                        <span class="material-symbols-outlined"> star </span>
                        <p>المنتجات</p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "Donors" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Donate">
                        <span class="material-symbols-outlined"> favorite </span>
                        <p>التبرعات</p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "Supports" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="GetAllSupports">
                        <span class="material-symbols-outlined"> favorite </span>
                        <p>الدعم المالي</p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "AllUsers" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="AllUsers">
                        <span class="material-symbols-outlined"> groups </span>
                        <p>كل المشتركين</p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "DeletedUsers" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="DeletedUsers">
                        <span class="material-symbols-outlined"> groups </span>
                        <p>كل المحذوفين</p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "AllParteners" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="AllPartners">
                        <span class="material-symbols-outlined"> groups </span>
                        <p>كل الشراكات</p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "HomeControl" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="EditHome">
                        <span class="material-symbols-outlined"> groups </span>
                        <p>التحكم في الواجهه </p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "TrackDelivery" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="TrackDeliveries">
                        <span class="material-symbols-outlined"> groups </span>
                        <p>تتبع التوصيلات </p>
                    </a>
                </li>
                <li>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-flex align-items-center">
                        <button type="submit" class="btn btn-link text-danger text-decoration-none d-flex align-items-center" style="padding:0;">
                            <span class="material-symbols-outlined me-1">logout</span>
                            الخروج
                        </button>
                    </form>
                </li>
            </ul>
        </div>

        <!-- Page Content -->
        <div class="content-page">
            @RenderBody()
        </div>
    </div>

    <script src="~/js/maindash.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
