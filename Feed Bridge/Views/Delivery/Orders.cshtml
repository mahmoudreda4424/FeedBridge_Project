@using Feed_Bridge.Models.Enums
@model IEnumerable<Feed_Bridge.Models.Entities.Order>

@{
    Layout = "_DeliveryLayout";
    ViewData["Title"] = "الطلبات";
}

<h1 class="mb-3">الطلبات للتوصيل</h1>

<div class="Orders_data_table">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>رقم الطلب</th>
                <th>اسم المستخدم</th>
                <th>المنتجات</th>
                <th>الكمية</th>
                <th>الحالة</th>
                <th>اجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model ?? Enumerable.Empty<Feed_Bridge.Models.Entities.Order>())
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@(order.User?.UserName ?? "غير محدد")</td>
                    <td>
                        <ul>
                            @foreach (var op in order.OrderProducts ?? Enumerable.Empty<Feed_Bridge.Models.Entities.OrderProduct>())
                            {
                                <li>@(op.Product?.Name ?? "غير محدد")</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <ul>
                            @foreach (var op in order.OrderProducts ?? Enumerable.Empty<Feed_Bridge.Models.Entities.OrderProduct>())
                            {
                                <li>@(op.Product?.Name ?? "غير محدد") - الكمية: @op.Quantity</li>
                            }
                        </ul>
                    </td>
                    <td>@order.Status.ToString()</td>
                    <td>
                        @if (order.Status == OrderStatus.Approved)
                        {
                            <form asp-action="TakeOrder" asp-route-id="@order.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-primary btn-sm">استلمت الطلب</button>
                            </form>

                        }
                        else if (order.Status == OrderStatus.Assigned &&
                        order.DeliveryId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                        {
                            <a asp-action="MarkDelivered" asp-route-id="@order.Id" class="btn btn-success btn-sm">
                                تم التوصيل
                            </a>
                        }
                        else if (order.Status == OrderStatus.Delivered)
                        {
                            <span class="badge bg-dark">تم التوصيل</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
