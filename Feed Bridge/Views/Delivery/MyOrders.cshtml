@using Feed_Bridge.Models.Enums
@model IEnumerable<Feed_Bridge.Models.Entities.Order>

@{
    Layout = "_DeliveryLayout";
    ViewData["Title"] = "طلباتي";
}

<h1 class="mb-3">طلباتي</h1>

<div class="Orders_data_table">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>رقم الطلب</th>
                <th>اسم المستخدم</th>
                <th>المنتجات</th>
                <th>الكميات</th>
                <th>الحالة</th>
                <th>اجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model ?? Enumerable.Empty<Feed_Bridge.Models.Entities.Order>())
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-controller="Order" asp-route-id="@order.Id" class="fw-bold text-decoration-none">
                            #@order.Id
                        </a>
                    </td>
                    <td><a asp-action="Profile" asp-controller="User" asp-route-id="@order.UserId">@(order.User?.UserName ?? "غير محدد")</a></td>
                    <td>
                        <ul>
                            @foreach (var op in order.OrderProducts ?? Enumerable.Empty<Feed_Bridge.Models.Entities.OrderProduct>())
                            {
                                <li>@(op.Product?.Name ?? "غير محدد")</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <ul>
                            @foreach (var op in order.OrderProducts ?? Enumerable.Empty<Feed_Bridge.Models.Entities.OrderProduct>())
                            {
                                <li>الكمية: @op.Quantity</li>
                            }
                        </ul>
                    </td>
                    <td>@order.Status.ToString()</td>
                    <td>
                        @if (order.Status == OrderStatus.Assigned &&
                       order.DeliveryId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                        {
                            <form asp-action="MarkDelivered" asp-route-id="@order.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-success btn-sm">تم التوصيل</button>
                            </form>
                        }
                        else if (order.Status == OrderStatus.Delivered)
                        {
                            <span class="badge bg-dark">تم التوصيل</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
