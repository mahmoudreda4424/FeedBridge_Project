
@{
    ViewData["Title"] = "GetAllUsers";
}

<h1>GetAllUsers</h1>

<table class="table table-bordered table-striped text-center">
    <thead class="table-dark">
        <tr>
            <th>UserName</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Orders</th>
            <th>Supports</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>@user.OrdersCount</td>
                <td>@user.SupportsCount</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="ManageRoles" asp-route-id="@user.Id" class="btn btn-info btn-sm">Roles</a>
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>