@model Feed_Bridge.ViewModel.ChangePasswordViewModel

<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>تغيير كلمة المرور</title>
    <link rel="stylesheet" href="~/css/main.css" />
</head>

<body>
    <div class="container otp-container">
        <div class="otp-form-card">
            <h2 class="form-header">تغيير كلمة المرور</h2>
            <p>الرجاء إدخال كلمة المرور الحالية وكلمة المرور الجديدة وتأكيدها.</p>

            <!-- عرض جميع الأخطاء -->
            <div asp-validation-summary="All" class="alert alert-danger" style="color:red;"></div>

            <form asp-action="ChangePassword" asp-controller="User" method="post" class="otp-form">
                @Html.AntiForgeryToken()

                <div class="form-control">
                    <label asp-for="CurrentPassword">كلمة المرور الحالية</label>
                    <input asp-for="CurrentPassword" type="password" required />
                    <span asp-validation-for="CurrentPassword" class="text-danger" style="color:red;"></span>
                </div>

                <div class="form-control">
                    <label asp-for="Password">كلمة المرور الجديدة</label>
                    <input asp-for="Password" type="password" required />
                    <span asp-validation-for="Password" class="text-danger" style="color:red;"></span>
                </div>

                <div class="form-control">
                    <label asp-for="ConfirmPassword">تأكيد كلمة المرور</label>
                    <input asp-for="ConfirmPassword" type="password" required />
                    <span asp-validation-for="ConfirmPassword" class="text-danger" style="color:red;"></span>
                </div>

                <button type="submit" class="btn">تغيير كلمة المرور</button>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
