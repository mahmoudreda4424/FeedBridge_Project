@model IEnumerable<Feed_Bridge.Models.Entities.Donation>

@{
    ViewData["Title"] = "التبرعات";
    ViewData["ActivePage"] = "Donate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mb-4">قائمة التبرعات</h1>

<table class="table table-striped table-bordered text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>اسم المتبرع</th>
            <th>رقم التلفون</th>
            <th>اسم المنتج</th>
            <th>تصنيف المنتج</th>
            <th>صورة المنتج</th>
            <th>الوصف</th>
            <th>الكمية</th>
            <th>تاريخ الانتهاء</th>
            <th>تاريخ التبرع</th>
            <th>الحالة</th>
            <th>التحكم</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var donation in Model)
        {
            <tr>
                <td>
                    <a asp-controller="User"
                       asp-action="Profile"
                       asp-route-id="@donation.User?.Id"
                       class="text-primary fw-bold">
                        @donation.User?.UserName
                    </a>
                </td>

                <td>@donation.Phone</td>
                <td>@donation.Name</td>
                <td>@donation.Category</td>

                <td>
                    <img src="~/uploads/@donation.ImgURL"
                         alt="صورة المنتج"
                         style="max-width: 80px; max-height: 80px;"
                         class="img-thumbnail" />
                </td>

                <td>@donation.Description</td>
                <td>@donation.Quantity</td>
                <td>@donation.ExpirDate.ToString("yyyy/MM/dd")</td>
                <td>@donation.CreatedAt.ToString("yyyy/MM/dd")</td>

                <!-- الحالة -->
                <td>
                    @if (donation.Status == Feed_Bridge.Models.Enums.DonationStatus.Pending)
                    {
                        <span class="badge bg-warning text-dark">قيد المراجعة</span>
                    }
                    else if (donation.Status == Feed_Bridge.Models.Enums.DonationStatus.Accepted)
                    {
                        <span class="badge bg-success">مقبول</span>
                    }
                    else if (donation.Status == Feed_Bridge.Models.Enums.DonationStatus.Rejected)
                    {
                        <span class="badge bg-danger">مرفوض</span>
                    }
                </td>

                <!-- التحكم -->
                <td>
                    @if (donation.Status == Feed_Bridge.Models.Enums.DonationStatus.Pending)
                    {
                        <form asp-controller="Donation" asp-action="Accept" asp-route-id="@donation.Id" method="post" style="display:inline">
                            <button type="submit" class="btn btn-success btn-sm">قبول</button>
                        </form>

                        <form asp-controller="Donation" asp-action="Reject" asp-route-id="@donation.Id" method="post" style="display:inline">
                            <button type="submit" class="btn btn-danger btn-sm">رفض</button>
                        </form>
                    }
                    else
                    {
                        <form asp-controller="Donation" asp-action="Delete" asp-route-id="@donation.Id" method="post" style="display:inline">
                            <button type="submit" class="btn btn-outline-danger btn-sm">حذف</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
