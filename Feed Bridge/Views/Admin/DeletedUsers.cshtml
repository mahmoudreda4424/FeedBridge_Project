@model IEnumerable<Feed_Bridge.ViewModel.UserWithRoleVM>

@{
    ViewData["Title"] = "المساعدات المالية";
    ViewData["ActivePage"] = "DeletedUsers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mb-4">كل المحذوفين</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>اسم المستخدم</th>
            <th>الايميل</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
            </tr>
        }
    </tbody>
</table>