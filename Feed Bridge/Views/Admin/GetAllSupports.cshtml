@model IEnumerable<Feed_Bridge.Models.Entities.Support>

@{
    ViewData["Title"] = "المساعدات المالية";
    ViewData["ActivePage"] = "Supports";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mb-4">قائمة المساعدات المالية</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>اسم المتبرع</th>
            <th>المبلغ</th>
            <th>التاريخ</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var donation in Model)
        {
            <tr>
                <td><a asp-action="Profile" asp-controller="User" asp-route-id="@donation.UserId">@donation.User.UserName</a></td>
                <td>@donation.Amount</td>
                <td>@donation.CreatedAt.ToString("yyyy/MM/dd")</td>
            </tr>
        }
    </tbody>
</table>
