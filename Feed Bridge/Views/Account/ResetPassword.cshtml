@model Feed_Bridge.ViewModel.ResetPasswordViewModel

@{
    ViewData["Title"] = "إعادة تعيين كلمة المرور";
}

<div class="container">
    <div class="register" dir="rtl">
        <div class="register-img text-center mb-4">
            <img src="~/imgs/image.png" alt="reset-img" class="img-fluid mb-2" />
            <p class="fw-bold">إعادة تعيين كلمة المرور</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }
        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success text-center">@ViewBag.Success</div>
        }

        <form asp-action="ResetPassword" asp-controller="Account" method="post" class="register-form">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            @Html.AntiForgeryToken()

            <!-- نخزن التوكن والإيميل -->
            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="Email" />

            <div class="form-control mb-3">
                <label asp-for="Password" class="form-label">كلمة المرور الجديدة</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-control mb-3">
                <label asp-for="ConfirmPassword" class="form-label">تأكيد كلمة المرور</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="submit-btn btn btn-primary w-100">تغيير كلمة المرور</button>

            <div class="login-links text-center mt-3">
                <a asp-action="Login" asp-controller="Account">العودة إلى تسجيل الدخول</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
