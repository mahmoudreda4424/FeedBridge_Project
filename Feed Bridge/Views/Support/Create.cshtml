@{
    ViewData["Title"] = "دعم مالي جديد";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">دعم مشروع الخير</h2>

    <form asp-action="Create" method="post" class="shadow p-4 rounded bg-light">
        <div class="mb-3">
            <label class="form-label">المبلغ</label>
            <input type="number" name="amount" class="form-control" min="1" step="0.01" required />
        </div>

        <div class="mb-3">
            <label class="form-label">طريقة الدفع</label>
            <select name="paymentMethod" class="form-control" required>
                <option value="CreditCard">بطاقة ائتمان</option>
                <option value="PayPal">PayPal</option>
                <option value="Cash">نقداً</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">دعم الآن</button>
    </form>
</div>
