@model IEnumerable<Feed_Bridge.Models.Entities.Order>

<div class="container mt-5">
    <h2 class="text-center mb-4">📜 طلباتي</h2>

    @if (!Model.Any())
    {
        <p class="text-center">لا توجد طلبات حتى الآن.</p>
        <div class="text-center mt-3">
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary">
                ⬅️ تسوق الآن
            </a>
        </div>
    }
    else
    {
        <table class="table table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>رقم الطلب</th>
                    <th>تاريخ الطلب</th>
                    <th>الحالة</th>
                    <th>عدد المنتجات</th>
                    <th>التفاصيل</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                        <td>@order.Status</td>
                        <td>@order.OrderProducts.Sum(p => p.Quantity)</td>
                        <td>
                            <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id"
                               class="btn btn-info btn-sm">عرض</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
