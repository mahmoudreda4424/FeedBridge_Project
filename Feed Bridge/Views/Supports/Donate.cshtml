@{
    ViewData["Title"] = "التبرع";
    Layout = "~/Views/Shared/_Layout.cshtml"; // لو عندك لياوت اسمه _Layout
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="~/css/main.css" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="payment-section">
        <div class="payment-container">
            <div class="img-container">
                <img src="~/imgs/payment.svg" alt="payment" />
            </div>
            <div class="payment-form">
                <div class="payment-header">
                    <h2>بـيانـــات الدفــــــع</h2>
                    <span class="material-symbols-outlined"> arrow_back </span>
                </div>

                <form asp-action="Donate" method="post">
                    <div>
                        <label>رقــم البطاقــه</label>
                        <input type="text" name="cardNumber" class="card-number" required />
                    </div>
                    <div>
                        <label>اســم صاحب البطاقــه</label>
                        <input type="text" name="cardholderName" class="cardholder-name" required />
                    </div>
                    <div>
                        <label>مبلغ التبرع</label>
                        <input type="number" name="donationAmount" class="donation-amount" min="1" required />
                    </div>
                    <div class="button-container">
                        <a href="~/Home/Index" class="cancel-btn btn">الغاء</a>
                        <button type="submit" class="btn confirm-btn">تأكيد و دفع</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
